<h2 id="software">Software & Tools</h2>
<ul role="list">
  {% for item in resources.software.resources %}
  <li class="resource">
    <img class="software__logo" src="{{ item.icon | normalizeCMSImage }}" alt="Icon for {{ item.title }}" />
    <div>
      <h3>{{ item.title }}</h3>
      <p>
        <small>Tags</small>
        {% for tag in item.tags %}<span class="tag">{{ tag }}</span>{% endfor %}
      </p>
      <p>{{ item.description }}</p>
      <a href={{ item.url}} target="_blank">Try out {{ item.title }}</a>
    </div>
  </li>
  {% endfor %}
</ul>

