<ol class="schedule | tbds-inline-stack  tbds-inline-stack--gap-4">
  {% for phase in agenda.phases %}
    <li class="tbds-inline-stack__item">
      <div class="schedule__phase">
      <h3><span>{{ loop.index0 }}</span> {{ phase.title }}</h3>
      <ol class="schedule__agenda">
        {% for exercise in phase.exercise %}
          <li class="schedule__exercise{% if exercise.divider === true %} schedule__divider{% endif %}">
            {% if exercise.time %}
              <h4>{{ exercise.time }}</h4>
            {% endif %}
            {% if exercise.slug %}
              <a href="/sprint-guide/exercises/{{ exercise.slug }}">{{ exercise.title }}</a>
            {% else %}
              <p>{{ exercise.title }}</p>
            {% endif %}
          </li>
        {% endfor %}
        {% if phase.end_time %}
          <footer class="schedule__exercise">
            <p>
              <small>
                <strong>{{ phase.end_time }}</strong> â€“ Wrap up
              </small>
            </p>
          </footer>
        {% endif %}
      </ol>
      </div>
    </li>
  {% endfor %}
</ol>