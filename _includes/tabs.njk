<section class="tab-collection">
  {% for tab in sprint_guide.tabs %}
    <input type="radio" name="tab" value="{{ tab.slug }}" id="tab{{ tab.number }}" class="tab-radio" {{ 'checked' if loop.first }}>
    <label for="tab{{ tab.number }}" class="tab-label" id="{{ tab.slug }}">
      <div class="tab-label__title tab">
        <span class="eyebrow">
          Phase {{ tab.number }}
        </span>
        {{ tab.title }}
      </div>
    </label>
    <div class="tab-content">
      <img src="/images/sprint_guide/phases/{{ tab.image }}" alt="People working on the prepare phase">
      <div>
        <h3 class="tab-content__title">Overview of {{ tab.title }}</h3>
        <p class="measure">{{ tab.overview }}</p>
        <a href="/sprint-guide/phases/{{ tab.slug }}">More about this Phase <span class="arrow">&#10230;</span></a>
      </div>
      <div class="tab-content__exercises">
        <div class="tab-content__exercises-content">
          <h3>Exercises</h3>
          <ul>
            {% for exercise in tab.exercises %}
              <li>
                <a href="/sprint-guide/exercises/{{ exercise.slug }}">{{ exercise.title }}</a>
              </li>
            {% endfor %}
          </ul>
          <a href="/sprint-guide/exercises">See all</a>
        </div>
      </div>
    </div>
  {% endfor %}
</section>
